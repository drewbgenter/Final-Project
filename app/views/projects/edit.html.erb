<div class="page-header">
  <h1>Edit Project #<%= @project.id %></h1>
</div>

<% if @project.errors.any? %>
  <% @project.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_project/<%= @project.id %>" class="form-horizontal">

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Project" class="btn btn-primary">
    </div>
  </div>

  <!-- Label and input for title -->
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">
      Title
    </label>
    <div class="col-sm-10">
      <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @project.title %>">
    </div>
  </div>

  <!-- Label and input for description -->
  <div class="form-group">
    <label for="description" class="col-sm-2 control-label">
      Description
    </label>
    <div class="col-sm-10">
      <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @project.description %></textarea>
    </div>
  </div>

  <!-- Label and input for time -->
  <div class="form-group">
    <label for="date" class="col-sm-2 control-label">
      Time
    </label>
    <div class="col-sm-10">
      <input type="text" id="date" name="time" placeholder="time" class="form-control" value="<%= @project.time %>">
    </div>
  </div>

  <!-- Label and input for date -->
  <div class="form-group">
    <label for="date" class="col-sm-2 control-label">
      Date
    </label>
    <div class="col-sm-10">
      <input type="text" id="date" name="date" placeholder="date" class="form-control" value="<%= @project.date %>">
    </div>
  </div>
  <script type="text/javascript">
 $('#date').datepicker();
  </script>

  <!-- Label and input for user_id -->
  <div class="form-group">
    <div class="col-sm-10">
      <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @project.user_id %>">
    </div>
  </div>


</form>
