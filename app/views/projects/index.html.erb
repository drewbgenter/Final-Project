<div class="page-header">
  <h1>Projects</h1>
</div>

<p><a href="/projects/new" class="btn btn-primary">Add a New Project</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Deadline</th>
      <th>User</th>
      <th>Project Page</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= project.deadline %></td>
        <td><%= project.user.name %></td>
        <td>
          <a href="/projects/<%= project.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
    <% if project.user_id == current_user.id %>
        <td>
          <a href="/projects/<%= project.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
        <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, "/delete_project/#{project.id}", data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"  %>
        </td>
    <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

