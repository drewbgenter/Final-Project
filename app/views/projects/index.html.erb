<div class="page-header">
  <h1>Projects</h1>
  <p><a href="/projects/new" class="btn btn-primary">Add Project</a></p>
</div>



<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Description</th>
      <th>Date</th>
      <th>Host</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
       <td><a href="/projects/<%= project.id %>" class="btn btn-primary"><%= project.title %></a></td>
        <td><%= project.description %></td>
        <td><%= project.deadline.strftime('%a %D %r')  %></td>
        <td><%= project.user.name %></td>

    <% if project.user_id == current_user.id %>
        <td>
          <a href="/projects/<%= project.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
        <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, "/delete_project/#{project.id}", data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"  %>
        </td>
    <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

