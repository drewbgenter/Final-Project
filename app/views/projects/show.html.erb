<div class="page-header">
  <h1><%= @project.title %></h1>
</div>

<dl class="dl-horizontal">

  <dt>Description</dt>
  <dd><%= @project.description %></dd>

  <dt>Deadline</dt>
  <dd><%= @project.deadline %></dd>

  <dt>Created By</dt>
  <dd><%= @project.user_id %></dd>

</dl>

<table>
<% @project.tasks.each do |task| %>

<dl class="dl-horizontal">

  <dt>Title</dt>
  <dd><%= @task.title %></dd>

  <dt>Claimed?</dt>
  <dd><%= @task.is_claimed %></dd>

  <dt>Completed?</dt>
  <dd><%= @task.is_completed %></dd>

  <dt>Completer</dt>
  <dd><%= @task.completer_id %></dd>

  <dt>Deadline</dt>
  <dd><%= @task.deadline %></dd>

  <dt>Description</dt>
  <dd><%= @task.description %></dd>


</dl>

<% end %>
</table>

<form action="/create_task" class="form-horizontal">
  <!-- Label and input for content -->
  <div class="form-group">
    <label for="content" class="col-sm-2 control-label">
      Add Task
    </label>
    <div class="col-sm-10">
      <textarea id="content" name="content" placeholder="To Do List" class="form-control" rows="3"></textarea>
    </div>
  </div>

  <!-- Label and input for project_id -->
  <div class="form-group">

    <div class="col-sm-10">
      <input type="hidden" id="photo_id" name="photo_id" placeholder="Photo" class="form-control" value="<%= @project.id %>">
    </div>
  </div>

  <!-- Label and input for user_id -->
  <div class="form-group">
    <div class="col-sm-10">
      <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Add Task" class="btn btn-primary">
    </div>
  </div>
</form>
