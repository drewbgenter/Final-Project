<div class="page-header">
  <h1>Tasks</h1>
</div>

<p><a href="/tasks/new" class="btn btn-primary">Add a New Task</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Completer</th>
      <th>Is completed</th>
      <th>Is claimed</th>
      <th>Deadline</th>
      <th>Description</th>
      <th>Title</th>
      <th>Project</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.completer_id %></td>
        <td><%= task.is_completed %></td>
        <td><%= task.is_claimed %></td>
        <td><%= task.deadline %></td>
        <td><%= task.description %></td>
        <td><%= task.title %></td>
        <td><%= task.project_id %></td>
        <td>
          <a href="/tasks/<%= task.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/tasks/<%= task.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_task/<%= task.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

